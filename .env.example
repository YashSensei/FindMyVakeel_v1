# ===========================================
# FIND MY VAKEEL - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# Frontend Variables (VITE_ prefix required for Vite)
# --------------------------------------------------

# Backend API URL (for frontend to call)
VITE_API_URL=http://localhost:3001/api


# Backend Variables
# --------------------------------------------------

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/findmyvakeel?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=development

# Render Deployment (only needed when deploying to Render)
# This should be your Render service URL (e.g., https://your-app.onrender.com)
RENDER_EXTERNAL_URL=

# JWT Secret for Authentication (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# MegaLLM API Key (for server-side AI processing - NEVER expose in frontend!)
MEGALLM_API_KEY=your-megallm-api-key-here

# File Upload Configuration (optional - Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Or use local uploads (default)
UPLOAD_DIR=./uploads


# Email Service Configuration (for sending emails)
# Get these from https://dashboard.emailjs.com/
# See EMAILJS_SETUP.md for detailed setup instructions
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here
VITE_EMAILJS_SERVICE_ID=service_xxxxxxx
VITE_EMAILJS_TEMPLATE_ID=template_xxxxxxx